<div class="low">


<aside class="col-md-4">
    <section class="user_info">
        <h1 class="show_h1">
            <%= gravatar_for @user %>
            <%= @user.name %>
        </h1>
        
        <table class="table table-striped">
          <tr>
              <th><span class="glyphicon glyphicon-envelope icons_gray" aria-hidden="true"></span>email</th>
              <td><%= @user.email %></td>
          </tr>
          <tr>
              <th><span class="glyphicon glyphicon-globe icons_gray" aria-hidden="true"></span>city</th>
              <td><%= @user.city %></td>
          </tr>
          <tr>
              <th><span class="glyphicon glyphicon-user icons_gray" aria-hidden="true"></span>profile</th>
              <td><%= @user.profile %></td>
          </tr>
          <tr>
              <th><span class="glyphicon glyphicon-cd icons_gray" aria-hidden="true"></span>music</th>
              <td><%= @user.music %></td>
          </tr>
        </table>

        <%= link_to "edit" , edit_user_path, class: "btn btn-default btn-block" %>
    </section>
</aside>

<div class="col-md-8">
    <div class="btn_bar">
        <span class="btn btn-default active"><%= link_to "followings", followings_user_path %><span class="badge btn_badge"><%= @followings.count %></span></span>
        <span class="btn btn-default"><%= link_to "followers", followers_user_path %><span class="badge btn_badge"><%= @followers.count %></span></span>
    </div>
    
    <%= render 'follow_form' if logged_in? %>
        <% if @followings.any? %>
            <h3>Following Users <span class="badge"><%= @followings.count %></span></h3>
              <ol class="row following_box">
                <%= render @followings %>
              </ol>
        <% end %>
</div>

</div>


<style>
    .btn a{
    text-decoration: none;
    }
    .btn_bar{
    margin-bottom: 4rem;
    }
    .btn_badge{
        margin-left: 1rem;
    }
    .btn-default .badge{
        background-color: #bbb;
    }
    .badge{
        background-color: #8ddab1;
    }
</style>